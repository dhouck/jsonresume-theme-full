{{#if resume.skills.length}}
<section id="skills" class="skills">
  {{#each resume.skills}}
  <div class="item">
    {{#if @first}}
    <h2>Skills</h2>
    {{/if}}
    <div class="subhead">
      {{#if name}}
      <span class="name">{{name}}</span>
      {{/if}}
      {{#if level}}
      <span class="level">{{level}}</span>
      {{/if}}
    </div>
    {{#if keywords.length}}
    <div class="keywords">
      {{#each keywords}}
      {{.}}{{#if @last}}{{else}},{{/if}}
      {{/each}}
    </div>
    {{/if}}
  </div>
  {{/each}}
</section>
{{/if}}
